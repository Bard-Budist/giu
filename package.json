{
  "name": "giu",
  "private": true,
  "version": "0.15.0-alpha.3",
  "author": "Guillermo Grau Panea",
  "license": "MIT",
  "description": "A collection of React components and utilities",
  "keywords": [
    "React",
    "components",
    "collection",
    "forms",
    "inputs",
    "ssr",
    "i18n"
  ],
  "homepage": "https://github.com/guigrpa/giu#readme",
  "bugs": {
    "url": "https://github.com/guigrpa/giu/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guigrpa/giu.git"
  },
  "scripts": {
    "status": "oao status",
    "travis": "yarn bootstrap && yarn compile",
    "build":
      "yarn bootstrap && yarn compile && yarn lint && yarn flow && yarn buildExamples && yarn docs && yarn xxl && yarn prepareRelease",
    "bootstrap": "oao bootstrap",
    "compile": "cd packages/giu && yarn compile",
    "compileWatch": "cd packages/giu && yarn compileWatch",
    "buildExamples": "cd packages/giu-examples && yarn build",
    "start": "cd packages/giu-examples && yarn start",
    "lint": "eslint packages",
    "flow": "flow check || exit 0",
    "docs": "yarn docs:readme && yarn docs:copyExamples",
    "docs:readme":
      "extract-docs --template docsPrivate/templates/README.md --output README.md",
    "docs:copyExamples":
      "rm -rf docs/ && mkdir docs && cp -r packages/giu-examples/out/* docs/",
    "xxl": "xxl --src packages --exclude node_modules,/lib/",
    "jest": "jest --watch --coverage",
    "jest-html":
      "jest-html --css-patterns test/snapshot.css --snapshot-patterns \"packages/**/*.snap\"",
    "test": "yarn testCovFull",
    "testFast": "jest",
    "testCovFull":
      "yarn _testCovPrepare && yarn _testDev && yarn _testProd && yarn _testCovReport",
    "testCovFast":
      "yarn _testCovPrepare && yarn _testDev && yarn _testCovReport",
    "_testCovPrepare":
      "rm -rf ./coverage .nyc_output .nyc_tmp && mkdir .nyc_tmp",
    "_testCovReport":
      "cp -r .nyc_tmp .nyc_output && nyc report --reporter=html --reporter=lcov --reporter=text",
    "_testDev":
      "cross-env NODE_ENV=development yarn _testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-dev.json",
    "_testProd":
      "cross-env NODE_ENV=production yarn _testCov && mv .nyc_tmp/coverage-final.json .nyc_tmp/coverage-prod.json",
    "_testCov":
      "jest --coverage && mv .nyc_output/coverage-final.json .nyc_tmp && rm -rf .nyc_output",
    "prepareRelease": "oao prepublish",
    "release": "oao publish",
    "prettier":
      "prettier --single-quote --trailing-comma es5 --write \"packages/**/src/**/*.js\""
  },
  "_devDependencies":
    "The following are included to avoid dep conflicts: react, react-dom, moment",
  "devDependencies": {
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "coveralls": "2.13.1",
    "cross-env": "5.0.5",
    "css-loader": "0.28.5",
    "eslint": "4.5.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-config-prettier": "2.3.0",
    "eslint-plugin-flowtype": "2.35.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.3.0",
    "extract-docs": "1.6.0",
    "flow-bin": "0.52.0",
    "flow-copy-source": "1.2.0",
    "jest": "17.0.3",
    "jest-html": "1.3.5",
    "moment": "2.18.1",
    "nyc": "11.1.0",
    "oao": "^0.10.0",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "static-site-generator-webpack-plugin": "3.4.1",
    "style-loader": "0.18.2",
    "styled-jsx": "^2.1.3",
    "webpack": "3.5.5",
    "xxl": "1.2.0"
  },
  "jest": {
    "testRegex": "packages/.*__tests__/.*\\.(test|spec)\\.(js|jsx)$",
    "moduleNameMapper": {
      "^.+\\.(css|less|sass)$": "<rootDir>/test/emptyObject.js",
      "^.+\\.(gif|ttf|eot|svg)$": "<rootDir>/test/emptyString.js"
    },
    "coverageDirectory": ".nyc_output",
    "coverageReporters": ["json", "text", "html"],
    "snapshotSerializers": ["<rootDir>/node_modules/jest-html"],
    "collectCoverageFrom": [
      "packages/*/src/**",
      "!packages/giu-examples/**",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/__mocks__/**"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js"
  }
}
